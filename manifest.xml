<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides"
  xsi:type="MailApp">
  
  <Id>a4567890-bcde-1234-5678-90abcdef1234</Id> <Version>1.0.0.0</Version>
  <ProviderName>Liu Haoran</ProviderName>
  <DefaultLocale>zh-TW</DefaultLocale>
  <DisplayName DefaultValue="郵件發送檢查器" />
  <Description DefaultValue="發送前確認收件人與附件" />
  <IconUrl DefaultValue="https://ashy-smoke-03b7c5800.3.azurestaticapps.net/assets/icon-64.png" />
  
  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>
  
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1" />
    </Sets>
  </Requirements>
  
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://ashy-smoke-03b7c5800.3.azurestaticapps.net/commands/commands.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>
  
  <Permissions>ReadWriteItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit" />
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <Set Name="Mailbox" MinVersion="1.3" />
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        
        <DesktopFormFactor>
          <FunctionFile resid="funcFile" />
          <ExtensionPoint xsi:type="Events">
            <Event Type="ItemSend" FunctionExecution="synchronous" FunctionName="validateSend" />
          </ExtensionPoint>
        </DesktopFormFactor>

      </Host>
    </Hosts>
    <Resources>
      <bt:Urls>
        <bt:Url id="funcFile" DefaultValue="https://ashy-smoke-03b7c5800.3.azurestaticapps.net/commands/commands.html" />
      </bt:Urls>
    </Resources>
  </VersionOverrides>
</OfficeApp>