<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
          xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
          xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides"
          xsi:type="MailApp">

  <Id>54911043-4217-4581-8077-8324483d3ea7</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Azure Test</ProviderName>
  <DefaultLocale>zh-TW</DefaultLocale>
  <DisplayName DefaultValue="Azure 測試增益集" />
  <Description DefaultValue="測試連接 Azure Static Web Apps" />
  
  <IconUrl DefaultValue="https://icy-moss-034796200.2.azurestaticapps.net/assets/icon-64.png" />
  <HighResolutionIconUrl DefaultValue="https://icy-moss-034796200.2.azurestaticapps.net/assets/icon-64.png" />

  <Permissions>ReadWriteItem</Permissions>
  
  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1" />
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://icy-moss-034796200.2.azurestaticapps.net/assets/icon-64.png"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="funcFile" />
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="groupLabel" />
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="paneReadButtonLabel" />
                  <Supertip>
                    <Title resid="paneReadButtonLabel" />
                    <Description resid="paneReadButtonDesc" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon" />
                    <bt:Image size="32" resid="icon" />
                    <bt:Image size="80" resid="icon" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="taskPaneUrl" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="icon" DefaultValue="https://icy-moss-034796200.2.azurestaticapps.net/assets/icon-64.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="funcFile" DefaultValue="https://icy-moss-034796200.2.azurestaticapps.net/assets/icon-64.png" />
        <bt:Url id="taskPaneUrl" DefaultValue="https://icy-moss-034796200.2.azurestaticapps.net/assets/icon-64.png" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="Azure測試" />
        <bt:String id="paneReadButtonLabel" DefaultValue="開啟圖片" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="paneReadButtonDesc" DefaultValue="測試讀取 Azure Static Web App" />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>